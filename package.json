{
    "name": "react-dashkit",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.8",
        "coveralls": "^3.1.0",
        "jest-styled-components": "^7.0.3",
        "node-sass": "^4.14.1",
        "polished": "^4.0.3",
        "prop-types": "^15.7.2",
        "react": "^16.14.0",
        "react-datepicker": "^3.3.0",
        "react-dom": "^16.14.0",
        "react-icons": "^3.11.0",
        "react-input-mask": "^3.0.0-alpha.2",
        "react-query": "^2.23.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.3",
        "react-snap": "^1.23.0",
        "react-syntax-highlighter": "^15.2.1",
        "styled-components": "^5.2.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "render": "react-snap",
        "lint": "eslint ./src",
        "e2e": "codeceptjs run --steps",
        "e2e:headless": "HEADLESS=true codeceptjs run --steps",
        "e2e:ui": "codecept-ui --app"
    },
    "jest": {
        "transformIgnorePatterns": [
            "node_modules/?!(react-syntax-highlighter/dist/esm/styles/prism)"
        ],
        "collectCoverageFrom": [
            "src/components/**/*.{js,jsx}",
            "!src/components/base/base.js",
            "!src/components/grid/grid.js",
            "!src/components/splash/splash.js",
            "!src/components/text-area/text-area.js",
            "!src/components/typography/typography.js"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@codeceptjs/configure": "^0.6.0",
        "@codeceptjs/examples": "^1.2.1",
        "@codeceptjs/ui": "^0.4.1",
        "@types/jest": "^26.0.14",
        "babel-plugin-styled-components": "^1.11.1",
        "codeceptjs": "^3.0.0",
        "customize-cra": "^1.0.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.21.4",
        "eslint-plugin-standard": "^4.0.1",
        "playwright": "^1.5.1",
        "react-app-rewired": "^2.1.6"
    }
